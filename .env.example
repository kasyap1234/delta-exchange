# Delta Exchange API Credentials
# Get these from: https://testnet.delta.exchange (testnet) or https://www.delta.exchange (mainnet)
DELTA_API_KEY=your_api_key_here
DELTA_API_SECRET=your_api_secret_here

# Environment: testnet or production
DELTA_ENV=testnet

# Region: india or global
DELTA_REGION=india

# Trading Settings
TRADING_PAIRS=BTCUSD,ETHUSD,SOLUSD
MAX_CAPITAL_PER_TRADE=0.10
STOP_LOSS_PCT=0.02
TAKE_PROFIT_PCT=0.04
CANDLE_INTERVAL=15m
MAX_OPEN_POSITIONS=3

# ============================================
# STRATEGY CONFIGURATION
# ============================================

# NOTE: Currently only single strategy (Technical Analysis) is implemented
# Hedging is used as risk management feature within TA strategy
# Future: Funding arbitrage and MTF strategies will be added

# Capital allocation (reserved for future multi-strategy system)
# Currently all capital uses Technical Analysis strategy
ALLOC_FUNDING_ARB=0.00    # Reserved for future funding arbitrage
ALLOC_CORR_HEDGE=0.00     # Reserved for future separate hedging strategy
ALLOC_MTF=0.00            # Reserved for future MTF trend strategy

# Hedging Settings
HEDGE_RATIO=0.30          # Default hedge ratio (30% of position)
MIN_CORRELATION=0.65      # Minimum correlation for hedging
FUNDING_THRESHOLD=0.0005  # Min funding rate for arbitrage (0.05%/8h)

# Multi-Timeframe Settings
HIGHER_TF=4h              # Higher timeframe for trend
ENTRY_TF=15m              # Entry timeframe for signals

# Enhanced Risk Management
DAILY_LOSS_LIMIT=0.03     # Daily loss limit (3%) - halts trading if hit
ATR_STOP_MULT=2.0         # ATR multiplier for stop-loss
ATR_TRAIL_MULT=1.5        # ATR multiplier for trailing stop
TRAILING_ENABLED=true     # Enable trailing stops
PROFIT_LADDER=true        # Enable partial profit taking

# Logging
LOG_LEVEL=INFO
